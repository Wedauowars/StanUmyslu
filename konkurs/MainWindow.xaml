<Window x:Class="konkurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:konkurs"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Stan Umysłu" Height="720" Width="1280" MinHeight="700" MinWidth="800">
    <Grid ShowGridLines="True" Background="#f2f2f2" x:Name="cont">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" MinHeight="90"></RowDefinition>
            <RowDefinition Height="67.67*"></RowDefinition>
            <RowDefinition Height="0.2*" MinHeight="90"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" ShowGridLines="True" Background="#e9e9e9">
            <Image Source="/res/Obrazki/ikonka.png" Margin="5"/>
            <TextBlock Text="🔥Passa: " FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="30, 0, 0, 0" FontFamily="Comic Sans MS" x:Name="pasta"/>
            <local:RButton Text="" Image="/res/Obrazki/Dark/trybNoc.png" CornerRadius="20" Width="80" Height="80" Grid.Column="0" Click="trybnoc_Click" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0, 0, 10, 0">
                <local:RButton.Background>
                    <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 0">
                        <GradientStop Color="#209bbf" Offset="0"/>
                        <GradientStop Color="#7953ce" Offset="0.5"/>
                        <GradientStop Color="#df00e0" Offset="1"/>
                    </LinearGradientBrush>
                </local:RButton.Background>
            </local:RButton>
            <local:RButton Text="" Image="/res/Obrazki/Bright/trybDzien.png" CornerRadius="20" Width="80" Height="80" Grid.Column="0" Click="ust_Click" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0, 0, 100, 0">
                <local:RButton.Background>
                    <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 0">
                        <GradientStop Color="#209bbf" Offset="0"/>
                        <GradientStop Color="#7953ce" Offset="0.5"/>
                        <GradientStop Color="#df00e0" Offset="1"/>
                    </LinearGradientBrush>
                </local:RButton.Background>
            </local:RButton>
        </Grid>
        <!-- Strona główna -->
        <!-- Strona główna -->
        <Grid Grid.Row="1" ShowGridLines="True" Visibility="Visible" x:Name="strona1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="90"></RowDefinition>
                    <RowDefinition Height="999*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Golden Gate Bridge ma 227m wysokości" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="32" Margin="30, 10, 0, 0" FontWeight="Bold" />
            <TextBlock Text="Jak sie dziś czujesz?" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="24" Margin="30, 0, 0, 10"/>
                <Grid Grid.Row="1">
                    <Grid Margin="30">
                        <Border Name="mask" Background="#e9e9e9" CornerRadius="20"/>
                        <RadioButton Margin="20, 50, 0 ,0" FontSize="24">ok</RadioButton>
                        <RadioButton Margin="20, 100, 0 ,0" FontSize="24">nie ok</RadioButton>
                        <RadioButton Margin="20, 150, 0 ,0" FontSize="24">3</RadioButton>
                        <RadioButton Margin="20, 200, 0 ,0" FontSize="24">4</RadioButton>
                        <RadioButton Margin="20, 250, 0 ,0" FontSize="24">5s</RadioButton>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                    <!--Wykres-->
                <Grid Margin="30">
                    <Border Name="mask1" Background="#e9e9e9" CornerRadius="20"/>
                    <local:Chart x:Name="Chart1"/>
                </Grid>
            </Grid>
        </Grid>
        <!-- Strona 2 -->
        <!-- Strona 2 -->
        <Grid Grid.Row="1" ShowGridLines="True" Visibility="Collapsed" x:Name="strona2">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="140"></RowDefinition>
                <RowDefinition Height="999*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" ShowGridLines="True">
                <TextBlock Text="Czas to tylko iluzja kontroli" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="48" Margin="30, 20, 0, 0" FontWeight="Bold" />
                <TextBlock Text="a ty dajesz się kontrolować" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="32" Margin="30, 0, 0, 20"/>
            </Grid>
            <Grid Grid.Row="1" ShowGridLines="True">
                <TextBlock Text="2"/>
                <Image Source="/res/wykres.png" Margin="20" Width="2000"/>
            </Grid>
        </Grid>
        <!-- Strona 3 -->
        <!-- Strona 3 -->
        <Grid Grid.Row="1" ShowGridLines="True" Visibility="Collapsed" x:Name="strona3">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="140"></RowDefinition>
                <RowDefinition Height="999*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" ShowGridLines="True">
                <TextBlock Text="Na kamieniu siedzę" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="48" Margin="30, 20, 0, 0" FontWeight="Bold" />
                <TextBlock Text="i filozofuję" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="32" Margin="30, 0, 0, 20"/>
            </Grid>
            <Grid Grid.Row="1" ShowGridLines="True">
                <local:Chart x:Name="Chart3"/>
            </Grid>
        </Grid>
        <!-- Strona Ustawienia -->
        <!-- Strona Ustawienia -->
        <Grid Grid.Row="1" ShowGridLines="True" Visibility="Collapsed" x:Name="strona_ust">
            <Image Source="/res/logo.png"/>
            <TextBlock FontSize="55" Text="Lepiej skakać na słoiku" Grid.ColumnSpan="2" FontStyle="Italic" Margin="20, 20, 0, 0"/>
            <TextBlock FontSize="35" Text="niż się uczyć w Ekonomiku" Grid.ColumnSpan="2" FontStyle="Italic" Margin="20, 90, 0, 0"/>
        </Grid>


        <Grid Grid.Row="2" ShowGridLines="False" Background="#e9e9e9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <local:RButton Text="" Image="/res/Obrazki/Bright/stronaGłówna.png" CornerRadius="20" Width="160" Height="80" Grid.Column="0" Click="RButton_Click_1">
                <local:RButton.Background>
                    <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 0">
                        <GradientStop Color="#209bbf" Offset="0"/>
                        <GradientStop Color="#7953ce" Offset="0.5"/>
                        <GradientStop Color="#df00e0" Offset="1"/>
                    </LinearGradientBrush>
                </local:RButton.Background>
            </local:RButton>

            <local:RButton Text="" Image="/res/Obrazki/Bright/Emocje/4.png" CornerRadius="20" Width="160" Height="80" Grid.Column="1" Click="RButton_Click_2">
                <local:RButton.Background>
                    <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 0">
                        <GradientStop Color="#209bbf" Offset="0"/>
                        <GradientStop Color="#7953ce" Offset="0.5"/>
                        <GradientStop Color="#df00e0" Offset="1"/>
                    </LinearGradientBrush>
                </local:RButton.Background>
            </local:RButton>

            <local:RButton Text="" Image="/res/Obrazki/Bright/Statystyki.png" CornerRadius="20" Width="160" Height="80" Grid.Column="2" Click="RButton_Click_3">
                <local:RButton.Background>
                    <LinearGradientBrush StartPoint="0, 1" EndPoint="1, 0">
                        <GradientStop Color="#209bbf" Offset="0"/>
                        <GradientStop Color="#7953ce" Offset="0.5"/>
                        <GradientStop Color="#df00e0" Offset="1"/>
                    </LinearGradientBrush>
                </local:RButton.Background>
            </local:RButton>

        </Grid>
    </Grid>
</Window>
