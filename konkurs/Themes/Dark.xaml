<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Base folder for icons -->
    <sys:String x:Key="IconBase">/res/Obrazki/Dark/</sys:String>

    <!-- Main background -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#1E1E1E"/>

    <!-- Panels, cards, inner surfaces -->
    <SolidColorBrush x:Key="CardColor" Color="#2A2A2A"/>

    <!-- Text -->
    <SolidColorBrush x:Key="ForegroundColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryForegroundColor" Color="#CCCCCC"/>

    <!-- Chart colors -->
    <SolidColorBrush x:Key="ChartLineColor" Color="#FF8F00"/>
    <SolidColorBrush x:Key="ChartAxisColor" Color="#DDDDDD"/>

    <!-- Same gradient for buttons -->
    <LinearGradientBrush x:Key="GradientMain" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#209bbf" Offset="0"/>
        <GradientStop Color="#7953ce" Offset="0.5"/>
        <GradientStop Color="#df00e0" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
