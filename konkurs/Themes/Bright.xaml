<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Base folder for icons -->
    <sys:String x:Key="IconBase">/res/Obrazki/Bright/</sys:String>

    <!-- Main background -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFF"/>

    <!-- Panels, cards, inner surfaces -->
    <SolidColorBrush x:Key="CardColor" Color="#F0F0F0"/>

    <!-- Text -->
    <SolidColorBrush x:Key="ForegroundColor" Color="#000000"/>
    <SolidColorBrush x:Key="SecondaryForegroundColor" Color="#444444"/>

    <!-- Chart colors -->
    <SolidColorBrush x:Key="ChartLineColor" Color="#3C78D8"/>
    <SolidColorBrush x:Key="ChartAxisColor" Color="#222222"/>

    <!-- Common Gradient for buttons (same in both themes) -->
    <LinearGradientBrush x:Key="GradientMain" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#209bbf" Offset="0"/>
        <GradientStop Color="#7953ce" Offset="0.5"/>
        <GradientStop Color="#df00e0" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
