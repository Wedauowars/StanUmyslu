<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:konkurs"

>

    <!-- Default Style for RoundedButton -->
    <Style TargetType="{x:Type local:RButton}">

        <!-- Default values -->
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="BorderBrush" Value="DarkBlue"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Width" Value="180"/>
        <Setter Property="MinHeight" Value="60"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RButton}">
                    <Grid>

                        <!-- Rounded Rectangle Background -->
                        <Rectangle x:Name="rect"
                                   Fill="{TemplateBinding Background}"
                                   StrokeThickness="{TemplateBinding BorderThickness}"
                                   RadiusX="{TemplateBinding CornerRadius}"
                                   
                                   RadiusY="{TemplateBinding CornerRadius}"/>
                        

                        <!-- Image + Text Layout -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="10">

                            <Image Source="{TemplateBinding Image}"
                                   Margin="1"/>

                            <TextBlock Text="{TemplateBinding Text}"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Pressed + Hover Visual Effects -->
                    <ControlTemplate.Triggers>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="rect" Property="Opacity" Value="0.9"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>

                        <!-- Pressed -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="rect" Property="Opacity" Value="0.7"/>
                        </Trigger>

                        <!-- Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="rect" Property="Fill" Value="#FFCFCFCF"/>
                            <Setter Property="Foreground" Value="#FF777777"/>
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
